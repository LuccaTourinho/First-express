{
  "compilerOptions": {
    "target": "ES2016",                 // Versão do JavaScript a ser gerada
    "module": "commonjs",               // Sistema de módulos usado
    "outDir": "./dist",                 // Pasta onde os arquivos JavaScript serão colocados
    "rootDir": "./src",                 // Pasta onde estão os arquivos TypeScript
    "strict": true,                     // Ativa todas as checagens estritas
    "esModuleInterop": true,            // Permite importações de módulos CommonJS
    "skipLibCheck": true                // Ignora checagem de tipos em arquivos de definição
  },
  "include": ["src/**/*.ts"],           // Inclui todos os arquivos TypeScript na pasta src
  "exclude": ["node_modules"]           // Exclui a pasta node_modules da compilação
}
